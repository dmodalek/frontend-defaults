{
  "name": "@namics/frontend-defaults",
  "version": "1.0.0",
  "license": "MIT",
  "repository": "https://github.com/namics/frontend-defaults",
  "private": true,
  "author": "Namics AG",
  "contributors": [
    "Ernst Ammann <ernst.ammann@namics.com>",
    "Christian Stuff<christian.stuff@namics.com>",
    "Jan Widmer<jan.widmer@namics.com>",
    "Simon Mollweide <simon.mollweide@namics.com>"
  ],
  "scripts": {
    "clean": "npx npm-run-all clean:*",
    "clean:lerna": "lerna clean --yes",
    "clean:lock": "rimraf **/package-lock.json",
    "clean:modules": "npx rimraf node_modules",
    "cz": "git-cz",
    "build": "run-s build:*",
    "build:core": "lerna run build --scope @namics/frontend-defaults-platform-core",
    "build:core-to-vendors": "npm run bootstrap",
    "build:vendors": "lerna run build --scope @namics/frontend-defaults-platform-* --ignore @namics/frontend-defaults-platform-core",
    "bootstrap": "lerna bootstrap",
    "postinstall": "npm run bootstrap",
    "prettier": "prettier --write \"**/*.*(js|jsx|ts|tsx|json)\" \"!cli/templates/**\" \"!__snapshots__\" \"!./platform/templates/**/*\"",
    "test": "lerna run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "cli/src/*.*{js,jsx,ts,tsx,json}": [
        "prettier --list-different --write"
      ],
      "cli/__tests__/*.*{js,jsx,ts,tsx,json}": [
        "prettier --list-different --write"
      ],
      "codequality/*.*{js,jsx,ts,tsx,json}": [
        "prettier --list-different --write"
      ],
      "docs/*.*{js,jsx,ts,tsx,json}": [
        "prettier --list-different --write"
      ],
      "editorconfig/*.*{js,jsx,ts,tsx,json}": [
        "prettier --list-different --write"
      ],
      "repo/*.*{js,jsx,ts,tsx,json}": [
        "prettier --list-different --write"
      ]
    }
  },
  "commitlint": {
    "extends": [
      "./repo/commitlint-conventional-changelog"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./repo/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "7.2.1",
    "commitizen": "3.0.4",
    "husky": "1.2.0",
    "lerna": "3.4.3",
    "lint-staged": "8.1.0",
    "prettier": "1.15.2",
    "rimraf": "2.6.2",
    "ts-node": "7.0.1",
    "npm-run-all": "4.1.5"
  }
}