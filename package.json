{
  "name": "@namics/frontend-defaults",
  "version": "1.1.0",
  "license": "MIT",
  "repository": "https://github.com/namics/frontend-defaults",
  "private": true,
  "author": "Namics AG",
  "contributors": [
    "Ernst Ammann <ernst.ammann@namics.com>",
    "Christian Stuff<christian.stuff@namics.com>",
    "Jan Widmer<jan.widmer@namics.com>",
    "Simon Mollweide <simon.mollweide@namics.com>"
  ],
  "scripts": {
    "clean": "npx npm-run-all clean:*",
    "clean:lerna": "lerna clean --yes",
    "clean:dirs": "rimraf lerna-debug.log npm-debug.log package-lock.json */package-lock.json */*/package-lock.json",
    "clean:modules": "rimraf node_modules",
    "cz": "git-cz",
    "bootstrap": "lerna bootstrap",
    "postinstall": "npm run bootstrap",
    "prettier": "prettier --write \"**/*.*(js|jsx|ts|tsx|json)\" \"!cli/templates/**\" \"!cli/__tests__/tmp/**\"",
    "test": "lerna run test --parallel",
    "lint": "lerna run lint --parallel",
    "build": "lerna run build",
    "update": "node ./bin/update.js",
    "prerelease": "npm-run-all test lint",
    "release": "lerna publish --conventional-commits --no-commit-hooks --allow-branch master",
    "start": "dash4",
    "audit": "npm-run-all audit:*",
    "audit:root": "npm audit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "cli/src/*.*{js,jsx,ts,tsx,json}": [
      "prettier --list-different --write"
    ],
    "cli/__tests__/*.*{js,jsx,ts,tsx,json}": [
      "prettier --list-different --write"
    ],
    "codequality/*.*{js,jsx,ts,tsx,json}": [
      "prettier --list-different --write"
    ],
    "docs/*.*{js,jsx,ts,tsx,json}": [
      "prettier --list-different --write"
    ],
    "editorconfig/*.*{js,jsx,ts,tsx,json}": [
      "prettier --list-different --write"
    ],
    "repo/*.*{js,jsx,ts,tsx,json}": [
      "prettier --list-different --write"
    ]
  },
  "commitlint": {
    "extends": [
      "./repo/commitlint-conventional-changelog"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./repo/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "8.1.0",
    "@dash4/plugin-code-coverage": "0.5.0",
    "@dash4/plugin-dependencies": "0.5.0",
    "@dash4/plugin-npm-scripts": "0.5.0",
    "@dash4/plugin-readme": "0.5.0",
    "@dash4/plugin-terminal": "0.5.0",
    "@dash4/server": "0.5.0",
    "chalk": "2.4.2",
    "commitizen": "4.0.1",
    "conventional-changelog": "3.1.8",
    "enquirer": "2.3.1",
    "execa": "2.0.3",
    "globby": "10.0.1",
    "husky": "3.0.1",
    "latest-version": "5.1.0",
    "lerna": "3.16.0",
    "lint-staged": "9.2.0",
    "npm-run-all": "4.1.5",
    "ora": "3.4.0",
    "prettier": "1.18.2",
    "rimraf": "2.6.3"
  }
}
